{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Textual: Run testarea.py with Dev Mode",
            "type": "executable",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/textual",
            "args": [
                "run",
                "--dev",
                "${workspaceFolder}/testarea.py"
            ],
            "console": "integratedTerminal",
        }
    ]
}